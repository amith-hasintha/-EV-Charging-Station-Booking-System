<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/snow_white"
    tools:ignore="MissingClass">

    <TextView
        android:id="@+id/tvHeading"
        android:text="Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/charcoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <!-- Cards row -->
    <LinearLayout
        android:id="@+id/cardRow"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="3">

        <TextView
            android:id="@+id/tvPending"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="2\nPending"
            android:textColor="@color/snow_white"
            android:background="@color/amber_orange"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/tvApproved"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="5\nApproved"
            android:textColor="@color/snow_white"
            android:background="@color/cyan_blue"
            android:padding="8dp"
            android:layout_marginStart="8dp"/>
        <TextView
            android:id="@+id/tvNearby"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="1\nNearby"
            android:textColor="@color/snow_white"
            android:background="@color/emerald"
            android:padding="8dp"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/btnDeactivateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deactivate Account"        app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBookings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cardRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
